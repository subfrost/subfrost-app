{
  "name": "@alkanes/ts-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for Alkanes - Bitcoin smart contracts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./wasm": {
      "types": "./build/wasm/alkanes_web_sys.d.ts",
      "import": "./build/wasm/alkanes_web_sys.js",
      "require": "./build/wasm/alkanes_web_sys.js",
      "default": "./build/wasm/alkanes_web_sys.js"
    }
  },
  "files": [
    "dist",
    "build",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:ts && npm run copy:wasm",
    "build:wasm": "echo 'WASM already built and vendored in build/ directory'",
    "build:vendor": "echo 'WASM already vendored in build/ directory'",
    "build:ts": "tsup src/index.ts src/provider/index.ts src/types/index.ts src/wallet/index.ts src/keystore/index.ts --format cjs,esm --dts --clean",
    "copy:wasm": "cp src/wasm/alkanes_bg.wasm dist/",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "alkanes",
    "bitcoin",
    "smart-contracts",
    "wasm",
    "typescript",
    "sdk",
    "wallet",
    "keystore"
  ],
  "author": "Alkanes Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kungfuflex/alkanes-rs.git",
    "directory": "ts-sdk"
  },
  "dependencies": {
    "@bitcoinerlab/secp256k1": "^1.1.1",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.7",
    "buffer": "^6.0.3",
    "ecpair": "^2.1.0",
    "events": "^3.3.0",
    "inherits": "^2.0.4",
    "stream-browserify": "^3.0.0",
    "string_decoder": "^1.3.0",
    "tiny-secp256k1": "^2.2.3",
    "util-deprecate": "^1.0.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "@oyl/sdk": "*"
  },
  "peerDependenciesMeta": {
    "@oyl/sdk": {
      "optional": true
    }
  }
}

{
  "name": "subfrost-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbopack",
    "build": "prisma generate && next build",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed:invite-codes": "npx tsx prisma/seed-invite-codes.ts",
    "db:seed:admin": "npx tsx prisma/seed-admin.ts",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --exclude='**/*.integration.test.ts' --exclude='**/e2e/**' --exclude='**/e2e-tests/**' --exclude='**/__tests__/sdk/**' --exclude='.external-build/**' --exclude='**/useFrbtcPremium.test.ts' --exclude='**/vaultCalldata.test.ts' --exclude='**/utxoParsing.test.ts' --exclude='**/useSwapQuotes.wrap-unwrap.test.ts' --exclude='**/wasm-init.test.ts' --exclude='**/sdk-pool-data.test.ts'",
    "test:utils": "vitest run utils/__tests__ lib/**/__tests__ app/**/__tests__",
    "test:hooks": "vitest run hooks/__tests__",
    "test:sdk": "vitest run __tests__/sdk",
    "test:integration": "INTEGRATION=true vitest run __tests__/sdk",
    "test:integration:no-puppeteer": "INTEGRATION=true SKIP_PUPPETEER=true vitest run __tests__/sdk",
    "test:integration:btc": "INTEGRATION=true vitest run __tests__/sdk/btc-send.integration.test.ts",
    "test:legacy": "npm run test:math && npm run test:calldata && npm run test:utxo",
    "test:math": "npx tsx hooks/__tests__/useFrbtcPremium.test.ts && npx tsx hooks/__tests__/useSwapQuotes.integration.test.ts",
    "test:calldata": "npx tsx hooks/__tests__/vaultCalldata.test.ts",
    "test:utxo": "npx tsx hooks/__tests__/utxoParsing.test.ts",
    "test:e2e:vault": "npx tsx e2e/vault-e2e.test.ts",
    "test:e2e:swap": "npx tsx e2e/swap-e2e.test.ts",
    "test:e2e:wallet": "npx tsx e2e/wallet-e2e.test.ts",
    "test:e2e": "npm run test:e2e:wallet && npm run test:e2e:swap && npm run test:e2e:vault"
  },
  "dependencies": {
    "@alkanes/ts-sdk": "file:../../boiler/reference/reference/alkanes-rs/ts-sdk/alkanes-ts-sdk-0.1.5.tgz",
    "@bitcoinerlab/secp256k1": "^1.2.0",
    "@bprogress/next": "^3.2.12",
    "@jest/globals": "^30.2.0",
    "@noble/hashes": "^2.0.1",
    "@prisma/client": "^6.19.2",
    "@tanstack/react-query": "^5.90.21",
    "bcryptjs": "^3.0.3",
    "bignumber.js": "^9.3.1",
    "bitcoin-address-validation": "^3.0.0",
    "bitcoinjs-lib": "^7.0.1",
    "bitcoinjs-message": "^2.2.0",
    "ecpair": "^3.0.1",
    "ioredis": "^5.9.3",
    "jest": "^29.7.0",
    "lightweight-charts": "^5.1.0",
    "lucide-react": "^0.556.0",
    "next": "^16.1.6",
    "qrcode": "^1.5.4",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tiny-secp256k1": "^2.2.4",
    "use-debounce": "^10.1.0",
    "varuint-bitcoin": "^2.0.0"
  },
  "devDependencies": {
    "@noble/curves": "^2.0.1",
    "@playwright/experimental-ct-react": "^1.58.2",
    "@playwright/test": "^1.58.2",
    "@scure/base": "^2.0.0",
    "@scure/btc-signer": "^2.0.1",
    "@tailwindcss/postcss": "^4.2.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/bip32": "^2.0.4",
    "@types/bip39": "^3.0.4",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^20.19.33",
    "@types/puppeteer": "^5.4.7",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitest/ui": "^4.0.18",
    "bip32": "^5.0.1",
    "bip39": "^3.1.0",
    "buffer": "^6.0.3",
    "eslint": "^9.39.3",
    "eslint-config-next": "^16.1.6",
    "global": "^4.4.0",
    "happy-dom": "^20.6.3",
    "jsdom": "^28.1.0",
    "prisma": "^6.19.2",
    "process": "^0.11.10",
    "puppeteer": "^24.37.5",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^4.0.18"
  }
}

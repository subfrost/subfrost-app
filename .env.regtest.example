# Regtest Environment Configuration
# Copy this file to .env.local and update values for your local regtest setup

# Network Configuration
NEXT_PUBLIC_NETWORK=regtest

# Bitcoin Regtest Node
# Default: http://localhost:3001
NEXT_PUBLIC_OYL_API_URL=http://localhost:3001

# Ethereum Regtest (Anvil/Hardhat)
# Deployed USDC contract address (default Anvil deployment address)
NEXT_PUBLIC_REGTEST_USDC_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3

# Deployed USDT contract address (default Anvil deployment address)
NEXT_PUBLIC_REGTEST_USDT_ADDRESS=0xe7f1725E7734CE288F8367e1Bb143E90bb3F0512

# Bound API (Bridge service)
# Default: http://localhost:3002/api/v1
NEXT_PUBLIC_BOUND_API_URL=http://localhost:3002/api/v1

# Sandshrew/OYL Project ID (for wallet integration)
SANDSHREW_PROJECT_ID=d6aebfed1769128379aca7d215f0b689
OYL_PROJECT_ID=d6aebfed1769128379aca7d215f0b689

# Optional: Override default Alkane IDs for regtest
# NEXT_PUBLIC_BUSD_ALKANE_ID=2:0
# NEXT_PUBLIC_FRBTC_ALKANE_ID=32:0
# NEXT_PUBLIC_VEDIESEL_VAULT_ID=2:1
# NEXT_PUBLIC_DXBTC_VAULT_ID=2:2

# Development
NODE_ENV=development

// Prisma schema for Subfrost App
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User wallet addresses and preferences
model User {
  id              String    @id @default(cuid())
  taprootAddress  String    @unique @map("taproot_address")
  segwitAddress   String?   @map("segwit_address")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  // Relations
  sessions        Session[]
  preferences     UserPreference?

  @@map("users")
}

// User sessions for optional authentication
model Session {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  token        String   @unique
  expiresAt    DateTime @map("expires_at")
  createdAt    DateTime @default(now()) @map("created_at")

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("sessions")
}

// User preferences (theme, locale, etc.)
model UserPreference {
  id           String   @id @default(cuid())
  userId       String   @unique @map("user_id")
  theme        String   @default("dark")
  locale       String   @default("en")
  feePreset    String   @default("medium") @map("fee_preset")
  customData   Json?    @map("custom_data")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

// Pool metadata cache (supplements on-chain data)
model PoolMetadata {
  id              String    @id @default(cuid())
  poolId          String    @unique @map("pool_id") // e.g., "2:3"
  factoryId       String    @map("factory_id")
  token0Id        String    @map("token0_id")
  token1Id        String    @map("token1_id")
  token0Symbol    String    @map("token0_symbol")
  token1Symbol    String    @map("token1_symbol")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  // Cached stats (updated periodically)
  tvlUsd          Float?    @map("tvl_usd")
  volume24hUsd    Float?    @map("volume_24h_usd")
  volume7dUsd     Float?    @map("volume_7d_usd")
  apr             Float?

  @@index([factoryId])
  @@index([token0Id])
  @@index([token1Id])
  @@map("pool_metadata")
}

// Token metadata cache
model TokenMetadata {
  id              String    @id @default(cuid())
  tokenId         String    @unique @map("token_id") // e.g., "32:0"
  name            String
  symbol          String
  decimals        Int       @default(8)
  logoUrl         String?   @map("logo_url")
  priceUsd        Float?    @map("price_usd")
  priceBtc        Float?    @map("price_btc")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  @@index([symbol])
  @@map("token_metadata")
}

// Transaction history (optional - for faster queries than indexer)
model TransactionLog {
  id              String    @id @default(cuid())
  txid            String    @unique
  userAddress     String    @map("user_address")
  type            String    // "swap", "add_liquidity", "remove_liquidity", "wrap", "unwrap"
  status          String    @default("pending") // "pending", "confirmed", "failed"
  blockHeight     Int?      @map("block_height")
  metadata        Json?
  createdAt       DateTime  @default(now()) @map("created_at")
  confirmedAt     DateTime? @map("confirmed_at")

  @@index([userAddress])
  @@index([type])
  @@index([status])
  @@index([createdAt])
  @@map("transaction_logs")
}

// Admin users with role-based permissions
model AdminUser {
  id            String    @id @default(cuid())
  username      String    @unique
  passwordHash  String    @map("password_hash")
  displayName   String?   @map("display_name")
  isActive      Boolean   @default(true) @map("is_active")
  permissions   String[]  // e.g. ["codes.read", "fuel.edit", "iam.owner"]
  lastLoginAt   DateTime? @map("last_login_at")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  sessions      AdminSession[]

  @@map("admin_users")
}

// Admin sessions (token-based, 24h expiry)
model AdminSession {
  id            String    @id @default(cuid())
  token         String    @unique
  adminUserId   String    @map("admin_user_id")
  expiresAt     DateTime  @map("expires_at")
  ipAddress     String?   @map("ip_address")
  userAgent     String?   @map("user_agent")
  createdAt     DateTime  @default(now()) @map("created_at")

  adminUser     AdminUser @relation(fields: [adminUserId], references: [id], onDelete: Cascade)

  @@index([adminUserId])
  @@index([expiresAt])
  @@map("admin_sessions")
}

// FUEL allocations (DB-managed, replaces hardcoded data/fuelAllocations.ts)
model FuelAllocation {
  id        String   @id @default(cuid())
  address   String   @unique
  amount    Float
  note      String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("fuel_allocations")
}

// Invite codes for gated/tracked access
model InviteCode {
  id          String    @id @default(cuid())
  code        String    @unique              // Uppercase code string
  description String?                        // Admin note (e.g., "Twitter giveaway Jan 2026")
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")

  // Hierarchy: link to parent code (null for top-level leader codes)
  parentCodeId  String?   @map("parent_code_id")
  parentCode    InviteCode?  @relation("CodeHierarchy", fields: [parentCodeId], references: [id])
  childCodes    InviteCode[] @relation("CodeHierarchy")

  // Owner of this code (the leader/sub-leader's taproot address)
  ownerTaprootAddress  String?   @map("owner_taproot_address")

  redemptions InviteCodeRedemption[]

  @@index([code])
  @@index([isActive])
  @@index([parentCodeId])
  @@index([ownerTaprootAddress])
  @@map("invite_codes")
}

// Tracks which wallet redeemed which invite code
model InviteCodeRedemption {
  id              String    @id @default(cuid())
  codeId          String    @map("code_id")
  taprootAddress  String    @map("taproot_address")
  segwitAddress   String?   @map("segwit_address")
  taprootPubkey   String?   @map("taproot_pubkey")
  redeemedAt      DateTime  @default(now()) @map("redeemed_at")

  inviteCode      InviteCode @relation(fields: [codeId], references: [id], onDelete: Cascade)

  @@unique([codeId, taprootAddress])
  @@index([taprootAddress])
  @@index([redeemedAt])
  @@map("invite_code_redemptions")
}
